﻿@model VanguardPro.Models.tb_user
@{
    ViewBag.Title = "Index";
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Login</title>

    <!-- Custom fonts for this template-->
    <link href="~/Content/admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/Content/admin/css/sb-admin-2.min.css" rel="stylesheet">

</head>
<body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">
                <h1 class="h1 text-gray-900 mb-4" style="text-align:center;margin-top:30px">Room Rental Management System</h1>
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block" style=" background: url(/Content/admin/img/logo.png);background-position: center; background-size: cover; }"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h5 text-gray-900 mb-4">Admin Login</h1>
                                    </div>
                                    <form class="user">
                                        @Html.LabelFor(model => model.u_username, htmlAttributes: new { @class = "control-label" })
                                        <div class="form-group">
                                            @Html.EditorFor(model => model.u_username, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.u_username, "", new { @class = "text-danger" })
                                        </div>
                                        @Html.LabelFor(model => model.u_pwd, htmlAttributes: new { @class = "control-label" })
                                        <div class="form-group">
                                            @Html.PasswordFor(model => model.u_pwd, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.u_pwd, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <input type="checkbox" class="custom-control-input" id="customCheck">
                                                <label class="custom-control-label" for="customCheck">
                                                    Remember
                                                    Me
                                                </label>
                                            </div>
                                        </div>
                                            <button class="btn btn-primary btn-user btn-block" type="submit">Login</button>
                                        <hr>
                                    </form>
                                    <hr>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
</body>
</html>

