@model VanguardPro.Models.tb_attendance

@{
    ViewBag.Title = "Create";
}


<div class="container-fluid">
    <h2 class="h3 mb-2 text-gray-800">Manage Cleaner Attendance</h2>


    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Attendance List</h6>

        </div>
        <div class="card-body">
            <div class="table">




                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                   


                    <div class="form-group">
                        @Html.LabelFor(model => model.atd_fid, "Building Floor", htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-6">
                            @Html.DropDownList("atd_fid", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.atd_fid, "", new { @class = "text-danger" })
                        </div>
                    </div>






                    <div class="form-group">
                        @Html.LabelFor(model => model.atd_check, htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.atd_check, new { @type = "date" })
                            @Html.ValidationMessageFor(model => model.atd_check, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
                }

                <div>
                    @Html.ActionLink("Back to List", "Index")
                </div>
            </div>
        </div>

    </div>
</div>
        <!-- Page level plugins -->
        <script src="~/Content/admin/js/vendor/datatables/jquery.dataTables.min.js"></script>
        <script src="~/Content/admin/js/vendor/datatables/dataTables.bootstrap4.min.js"></script>

        <!-- Page level custom scripts -->
        <script src="~/Content/admin/js/js/demo/datatables-demo.js"></script>




