@model IEnumerable<VanguardPro.Models.tb_attendance>

@{
    ViewBag.Title = "Index";
}

<div class="container-fluid">
    <h2 class="h3 mb-2 text-gray-800">Manage Cleaner Attendance</h2>
    <p>
        @Html.ActionLink("Add Attendance", "Create")
    </p>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Attendance List</h6>


        </div>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.tb_floor.f_building)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.atd_check)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.tb_floor.f_building)

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.atd_check)
                    </td>
                    <td>

                        @Html.ActionLink("Details", "Details", new { id = item.atd_id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.atd_id })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>


<!-- Page level plugins -->
<script src="~/Content/admin/js/vendor/datatables/jquery.dataTables.min.js"></script>
<script src="~/Content/admin/js/vendor/datatables/dataTables.bootstrap4.min.js"></script>

<!-- Page level custom scripts -->
<script src="~/Content/admin/js/js/demo/datatables-demo.js"></script>





