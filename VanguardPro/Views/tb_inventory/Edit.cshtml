@model VanguardPro.Models.tb_inventory

@{
    ViewBag.Title = "Edit";
}



<div class="container-fluid">
    <h2 class="h3 mb-2 text-gray-800">Manage Inventory</h2>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Edit Inventory List</h6>


        </div>
        <div class="card-body">
            <div class="table">









                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ivtry_id)

                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.tb_floor.f_building)
                        </dt>

                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.tb_floor.f_building)
                        </dd>

                       
                        </dl>


                        <div class="form-group">
                            @Html.LabelFor(model => model.ivtry_fid, htmlAttributes: new { @class = "control-label col-md-6" })
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.ivtry_fid, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ivtry_fid, "", new { @class = "text-danger" })
                            </div>
                        </div>




                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <tr>
                                <th>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.ivtry_item, htmlAttributes: new { @class = "control-label col-md-6" })
                                        <div class="col-md-6">
                                            @Html.EditorFor(model => model.ivtry_item, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.ivtry_item, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </th>
                                <th>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.ivtry_count, htmlAttributes: new { @class = "control-label col-md-6" })
                                        <div class="col-md-6">
                                            @Html.EditorFor(model => model.ivtry_count, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.ivtry_count, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                </th>
                            </tr>
                        </table>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </div>

                </div>
                }

                <div>
                    @Html.ActionLink("Back to List", "Index")
                </div>
            </div>
        </div>
    </div>
</div>



<!-- Page level plugins -->
<script src="~/Content/admin/js/vendor/datatables/jquery.dataTables.min.js"></script>
<script src="~/Content/admin/js/vendor/datatables/dataTables.bootstrap4.min.js"></script>

<!-- Page level custom scripts -->
<script src="~/Content/admin/js/js/demo/datatables-demo.js"></script>