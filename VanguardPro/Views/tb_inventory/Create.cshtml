@model VanguardPro.Models.tb_inventory

@{
    ViewBag.Title = "Create";
}
<div class="container-fluid">
    <h2 class="h3 mb-2 text-gray-800">Manage Inventory</h2>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Add Inventory List</h6>


        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" ">
                    <tr>



                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                        }
                        <div class="form-horizontal">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })



                            <div class="form-group">
                                @Html.LabelFor(model => model.ivtry_id, htmlAttributes: new { @class = "control-label col-md-6" })
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.ivtry_id, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ivtry_id, "", new { @class = "text-danger" })

                                </div>
                            </div>


                            <div class="form-group">
                                @Html.LabelFor(model => model.ivtry_fid, "ivtry_fid", htmlAttributes: new { @class = "control-label col-md-6" })
                                <div class="col-md-6">
                                    @Html.DropDownList("ivtry_fid", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ivtry_fid, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div id="firstdiv">
                    <tr>
                        <th>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ivtry_item, htmlAttributes: new { @class = "control-label col-md-6" })
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.ivtry_item, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ivtry_item, "", new { @class = "text-danger" })
                                    <br />
                                    <input id="Addbutton" type="button"  value="Add">
                                </div>
                            </div>

                        </th>
                        <th>
                            <div class="form-group">
                                @Html.LabelFor(model => model.ivtry_count, htmlAttributes: new { @class = "control-label col-md-10" })
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.ivtry_count, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ivtry_count, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </th>
                    </tr>
            </div>
        

            </table>





            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </div>

    



          
        </div>
    </div>
</div>
    



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



<!-- Page level plugins -->
<script src="~/Content/admin/js/vendor/datatables/jquery.dataTables.min.js"></script>
<script src="~/Content/admin/js/vendor/datatables/dataTables.bootstrap4.min.js"></script>

<!-- Page level custom scripts -->
<script src="~/Content/admin/js/js/demo/datatables-demo.js"></script>