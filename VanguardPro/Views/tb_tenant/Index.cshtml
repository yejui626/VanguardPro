@model IEnumerable<VanguardPro.Models.tb_tenant>

@{
    ViewBag.Title = "Index";
    var isAdmin = false;
}
@if (Session["UserID"] != null && Session["UserType"].ToString() == "1")
{
    isAdmin = true;
}

<style>
    .row {
        margin-right: 0px;
    }
</style>
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Tenant List</h6>
        </div>
        <div class="card-body">
            @if (isAdmin)
            {
                <a href="@Url.Action("Create")" title="Create" class="btn btn-primary" style="float:right;">
                    Create
                </a>
            }
            <div class="table-responsive">
                <table class="table" id="dataTable" width="100%" cellspacing="0" ">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.t_name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.t_ic)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.t_uploadic)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.t_contract)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.t_phone)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.t_emergcont)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.t_siriNo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.t_accessCardNo)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.t_name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.t_ic)
                                </td>
                                <td>
                                    <a href="@Url.Action("GetFile", "tb_tenant", new { floorLayoutFileName = item.t_uploadic})" target="_blank" style="color: blue; font-weight: bold;">
                                        @item.t_uploadic (Click to see)
                                    </a>
                                </td>
                                <td>
                                    <a href="@Url.Action("GetFile", "tb_tenant", new { floorLayoutFileName = item.t_contract})" target="_blank" style="color: blue; font-weight: bold;">
                                        @item.t_contract (Click to see)
                                    </a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.t_phone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.t_emergcont)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.t_siriNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.t_accessCardNo)
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", new { id = item.t_id })" title="Edit">
                                        <i class="fas fa-edit fa-lg text-primary"></i>
                                    </a>

                                    <a href="@Url.Action("Details", new { id = item.t_id })" title="Details">
                                        <i class="fas fa-info-circle fa-lg text-info"></i>
                                    </a>

                                    <a href="@Url.Action("Delete", new { id = item.t_id })" title="Delete">
                                        <i class="fas fa-trash-alt fa-lg text-danger"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<link rel="stylesheet" href="https://cdn.datatables.net/1.11.4/css/jquery.dataTables.min.css">
<script src="https://cdn.datatables.net/1.11.4/js/jquery.dataTables.min.js"></script>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable();
        });
    </script>
}
